@model ForumRecrutementApp.Models.Evaluation

@{
    ViewData["Title"] = "Évaluer un candidat";
}

<div class="container mt-4">
    <h2>Évaluation du candidat @ViewBag.CandidatNom</h2>

    <form asp-action="Evaluer" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Note" class="control-label">Note (sur 5)</label>
            <input asp-for="Note" class="form-control" type="number" min="0" max="5" />
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Commentaire" class="control-label">Commentaire</label>
            <textarea asp-for="Commentaire" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Commentaire" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Enregistrer" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}