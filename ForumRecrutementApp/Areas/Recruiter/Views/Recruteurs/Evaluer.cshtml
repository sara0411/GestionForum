@model ForumRecrutementApp.Models.Evaluation

@{
    ViewData["Title"] = "Évaluer le Candidat";
}

<h2>Évaluer le Candidat: @ViewBag.CandidatNom</h2>
<form asp-action="Evaluer" method="post">
    <input type="hidden" asp-for="CandidatId" value="@ViewBag.CandidatId" />
    <input type="hidden" asp-for="RecruteurId" value="@ViewBag.RecruteurId" />

    <div class="form-group">
        <label asp-for="Note" class="control-label">Note (1-5)</label>
        <input asp-for="Note" class="form-control" />
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Commentaire" class="control-label">Commentaire</label>
        <textarea asp-for="Commentaire" class="form-control"></textarea>
        <span asp-validation-for="Commentaire" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Soumettre</button>
    </div>
</form>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}