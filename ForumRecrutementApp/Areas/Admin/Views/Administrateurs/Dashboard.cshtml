@{
    ViewData["Title"] = "Dashboard";
}
<div class="container-fluid py-4">
    <h1 class="mb-4">Tableau de bord administrateur</h1>
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <a href="@Url.Action("Index", "Forums", new { area = "Admin" })" class="text-decoration-none">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Forums Actifs
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ForumsCount</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <a href="@Url.Action("Index", "Candidats", new { area = "Candidate" })" class="text-decoration-none">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Candidats Inscrits
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.CandidatsCount</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <a href="@Url.Action("Index", "Recruteurs", new { area = "Recruiter" })" class="text-decoration-none">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Recruteurs
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.RecruteursCount</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-building fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>