@model IEnumerable<ForumRecrutementApp.Models.Forum>
@{
    ViewData["Title"] = "Gestion des Forums";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="h3 mb-4">Gestion des Forums</h1>

    <p>
        <a href="/Admin/Forums/Create" class="btn btn-primary">
            Créer un nouveau forum
        </a>
    </p>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Date</th>
                            @* <th>Lieu</th> *@
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nom</td>
                                <td>@item.Date.ToShortDateString()</td>
                              @*   <td>@item.Lieu</td> *@
                                <td>
                                    <a href="/Admin/Forums/Edit/1" class="btn btn-warning btn-sm">
                                        Modifier
                                    </a>
                                    <form action="/Admin/Forums/Delete/1" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>