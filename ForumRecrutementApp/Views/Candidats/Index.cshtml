@model IEnumerable<ForumRecrutementApp.Models.Candidat>

<h2>Liste des Candidats</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidat in Model)
        {
            <tr>
                <td>@candidat.Id</td>
                <td>@candidat.Nom</td>
                <td>@candidat.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@candidat.Id">Modifier</a> |
                    <a asp-action="Delete" asp-route-id="@candidat.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Ajouter un Candidat</a>