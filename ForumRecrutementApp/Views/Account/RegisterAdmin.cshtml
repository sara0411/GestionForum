@model RegisterAdminViewModel
@{
    ViewData["Title"] = "Inscription Administrateur";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">Inscription Administrateur</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="RegisterAdmin" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Entrez votre email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Mot de passe</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Entrez votre mot de passe" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmer le mot de passe</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirmez votre mot de passe" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">S'inscrire comme Administrateur</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <p>Déjà inscrit ? <a asp-action="Login" asp-controller="Account">Se connecter</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}